{
	"name": "FLO Sign In",
	"short_name": "FLO Sign In",

	"icons": { 
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png" 
	},

	"description": "Log in to FLO",
	"version": "1.1",
	"description": "The quickest way to sign into Flinders Learning Online.",
	"author": "Kevin Doveton",
	"homepage_url": "http://kdoveton.com",

	"content_scripts": [
		{
			"matches": ["https://flo.flinders.edu.au/", "https://flinders.okta.com/login/login.htm?fromURI=%2Fapp%2Fflindersuniversity_flo_1*"],
			"js": ["jquery.js", "login.js"]
		}
	],

	"options_ui": {
		"page": "options.html",
		"chrome_style" : true
	},
	"permissions": [
		"activeTab",
		"storage"
	],

	"manifest_version": 2
}

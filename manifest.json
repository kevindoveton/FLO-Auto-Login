{
	"name": "FLO Signin",

	"icons": { 
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png" 
	},

	"description": "Log in to FLO",
	"version": "0.1",

	"content_scripts": [
		{
			"matches": ["https://flo.flinders.edu.au/", "https://flinders.okta.com/login/login.htm?fromURI=%2Fapp%2Fflindersuniversity_flo_1*"],
			"js": ["jquery.js", "login.js"]
			// "run_at": "document_end"
		}
	],

	"options_ui": {
		"page": "options.html",
		"chrome_style" : true
	},
	"permissions": [
		"activeTab",
		"storage"
	],

	"manifest_version": 2
}
